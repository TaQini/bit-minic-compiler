# 编译单元
CMPL_UNIT -> FUNC_LIST

# 函数列表
FUNC_LIST -> FUNC_DEF FUNC_LIST
FUNC_LIST -> epsilon

# 函数定义
FUNC_DEF -> TYPE_SPEC ID ( ARG_LIST ) CODE_BLOCK

# 类型声明
TYPE_SPEC -> int
TYPE_SPEC -> void
TYPE_SPEC -> char
TYPE_SPEC -> float
TYPE_SPEC -> double

# 参数列表
ARG_LIST -> ARGUMENT
ARG_LIST -> ARGUMENT , ARG_LIST
ARG_LIST -> epsilon

# 参数
ARGUMENT -> TYPE_SPEC ID

# 代码块
CODE_BLOCK -> { STMT_LIST }

# 语句列表
STMT_LIST -> STMT STMT_LIST
STMT_LIST -> epsilon

# 语句：变量声明、返回、赋值、循环、分支、比较、函数调用
STMT -> DECL_STMT
STMT -> RTN_STMT
STMT -> ASSIGN_STMT
STMT -> ITER_STMT
STMT -> SLCT_STMT
STMT -> CMP_STMT
# STMT -> CALL_STMT

# 变量声明语句
DECL_STMT -> TYPE_SPEC ID DECL_STMT' ;
DECL_STMT' -> = EXPR
DECL_STMT' -> epsilon

# 返回语句
RTN_STMT -> return EXPR

# 赋值语句
ASSIGN_STMT -> ID = EXPR

# 循环语句 for, while
ITER_STMT -> for ( STMT ; STMT ; STMT ) CODE_BLOCK 
ITER_STMT -> for ( STMT ; STMT ; STMT ) STMT
# ITER_STMT -> while ( STMT ) CODE_BLOCK
# ITER_STMT -> while ( STMT ) STMT
# ITER_STMT -> do STMT while ( STMT )
# ITER_STMT -> do CODE_BLOCK while ( STMT )

# 分支语句 if-else
SLCT_STMT -> if ( STMT ) CODE_BLOCK
SLCT_STMT -> if ( STMT ) STMT
# SLCT_STMT -> if ( STMT ) STMT else CODE_BLOCK
# SLCT_STMT -> if ( STMT ) STMT else STMT
# SLCT_STMT -> if ( STMT ) CODE_BLOCK else CODE_BLOCK
# SLCT_STMT -> if ( STMT ) CODE_BLOCK else STMT

# 比较语句
CMP_STMT -> EXPR OP EXPR
CMP_OP ->  >
CMP_OP ->  <
CMP_OP ->  >=
CMP_OP ->  <=
CMP_OP ->  ==
CMP_OP ->  !=
#CMP_STMT -> EXPR > EXPR
#CMP_STMT -> EXPR < EXPR
#CMP_STMT -> EXPR >= EXPR
#CMP_STMT -> EXPR <= EXPR
#CMP_STMT -> EXPR == EXPR
#CMP_STMT -> EXPR != EXPR

# 调用语句
# CALL_STMT -> ID ( ARG_LIST )

# 表达式
EXPR -> TERM EXPR2
EXPR2 -> + TERM EXPR2
EXPR2 -> - TERM EXPR2
EXPR2 -> epsilon

TERM -> FACTOR TERM2
TERM2 -> * FACTOR TERM2
TERM2 -> / FACTOR TERM2
TERM2 -> epsilon

FACTOR -> ID
FACTOR -> CONST
FACTOR -> ( EXPR )

